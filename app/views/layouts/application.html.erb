<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Hackify Portal" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Hackify Portal" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= auto_discovery_link_tag(:atom, events_path(:atom)) %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
     <%= render 'layouts/messages' %>
     <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-12">
         <%= yield %>
       </div>
     </div>
   </div>
    </main>
    <footer>
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>
