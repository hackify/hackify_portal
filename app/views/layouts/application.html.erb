<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Hackify Portal" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Hackify Portal" %>">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= auto_discovery_link_tag(:atom, events_path(:atom)) %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
     <%= render 'layouts/messages' %>
     <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-12">
         <%= yield %>
       </div>
     </div>
   </div>
    </main>
    <footer>
      <%= render 'layouts/footer' %>
    </footer>

    <% if CONFIG[:ga_tracking_id] %>
    <!-- Le google
    ================================================== -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', '<%= CONFIG[:ga_tracking_id] %>', 'hackify.org');
      ga('send', 'pageview');

    </script>
    <% end %>

  </body>
</html>